<odoo>
    <data>
        <record model="ir.ui.view" id="kki_product.form">
            <field name="name">kki_product form</field>
            <field name="model">product.template</field><!--モデル名-->
            <field name="inherit_id" ref="product.product_template_form_view"/><!--継承先の外部ID-->
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="name2"/>
                    <field name="marge_name" invisible="1"/>
                </xpath>
            </field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/><!--継承先の外部ID-->
            <field name="arch" type="xml">
                <xpath expr="//field[@name='barcode']" position="before">
                    <field name="unified_id"/>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="kki_product.list">
            <field name="name">kki_product list</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='name']" position="after">
                    <field name="marge_name"/>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="kki_product.kanban">
            <field name="name">kki_product kanban</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_kanban_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='name']" position="after">
                    <field name="marge_name"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>